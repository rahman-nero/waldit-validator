{
    "name": "waldit/validator",
    "description": "The validator of PHP (Contribution: JoJo)",
    "license": "GPL-3.0-only",
    "require-dev": {
        "larapack/dd": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "require": {
        "php": "~7.4"
    },
    "autoload": {
        "psr-4": {
            "Waldit\\Validator\\" : "src/waldit"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\" : "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test" : "vendor/bin/phpunit"
    }
}
